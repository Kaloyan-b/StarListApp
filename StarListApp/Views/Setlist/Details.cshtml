@model StarListApp.ViewModels.SetlistDetailsViewModel

@{
    ViewData["Title"] = "Setlist Details";
}

<h2>@Model.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Duration</th>
            <th>BPM</th>
            <th>Key</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs.OrderBy(s => s.Order))
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Duration</td>
                <td>@song.BPM</td>
                <td>@song.Key</td>
                <td>@song.Order</td>
            </tr>
        }

        <tr>
            <form asp-action="AddSong" method="post">
            <td>
                <input type="hidden" name="SetlistId" value="@Model.SetlistId" />
                <input type="text" name="Title" class="form-control" required />
            </td>
            <td>
                <input type="text" name="Duration" class="form-control" placeholder="hh:mm:ss" required />
            </td>
            <td>
                <input type="number" name="BPM" class="form-control" />
            </td>
            <td>
                <input type="text" name="Key" class="form-control" required />
            </td>

            <td>
                <button type="submit" class="btn btn-success btn-sm">Add</button>
            </td>
            </form>
        </tr>
    </tbody>
</table>
